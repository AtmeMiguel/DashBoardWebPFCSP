
@{
    string Title = "IMG | Pregunta";
    ViewBag.Title = Title;
    Layout = "~/Views/Shared/_ImageUpload.cshtml";
}

@*<meta name="viewport" content="width=device-width" />*@
<div id="app">
    <div class="containerClaro">
        <br />
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <div class="card redondoCardLight  cajaGrisClaroDelgado ">
                    <div class="card-header bg-info" style="float:right; font-size: 18px; height: 40px; margin-top: 0px;  z-index: 10;">
                        <div class="card-title text-center text-white">
                            <strong class="text-center">@Title</strong>
                        </div>
                    </div>
                    <div class="card-body">

                        @using (Html.BeginForm("ImageFormulario", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="row">
                                <div class="col-xs-12 col-md-12">
                                    <b-alert show variant="info">
                                        <div class="row">
                                            <div class="col-xs-12 col-md-3 text-center">
                                                <br />
                                                <b-avatar button icon="exclamation-octagon" size="5rem" variant="info"></b-avatar>
                                            </div>
                                            <div class="col-xs-3 col-md-9">
                                                Elige un archivo para agregar una imagen <br /><br />
                                                <input type="file" id="file" name="file" @@change="previewImage" accept="image/*">
                                                <template v-if="imageData.length > 0">
                                                    <input type="submit" value="Subir archivo" />
                                                    <div class="image-preview" v-if="imageData.length > 0">
                                                        <img class="preview" :src="imageData">
                                                    </div>
                                                </template>

                                            </div>
                                        </div>
                                    </b-alert>
                                </div>
                            </div>
                        }

                        <br />
                        <template v-if="idRespuesta > 0">
                            <h2 class="text-success text-center">{{msg}}</h2>
                            
                        </template>
                        <template v-else>
                            <div class="card-text" v-if="Img.length > 3 ">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <img v-bind:src="'../../Recursos/Examen/' + Img" width="100%">
                                    </div>
                                </div>
                            </div>
                        </template>
                        


                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<style>
    img.preview {
        width: 100%;
        background-color: white;
        border: 1px solid #DDD;
        padding: 5px;
    }
</style>

<script>

    var app = new Vue({
        el: '#app',
        data: {
            ID_USUARIO: sessionStorage.getItem('ID_USUARIO'),
            SERVER_URL: sessionStorage.getItem('SERVER_URL'),
            Img: sessionStorage.getItem('IMAGE'),
            imageData: "",  // we will store base64 format of image in this string
            msg: '@ViewBag.Message',
            idRespuesta: '@ViewBag.ID',
        },
        methods: {
            mostrarModal: function (form) {
                this.MensajeSistema = form.msg;
                this.$bvModal.show(form.modal);
            },
            mostrarToast(variant = null) {
                this.MensajeSistema = variant.msg;
                this.$bvToast.toast(this.MensajeSistema, {
                    title: `Alerta de sistema`,
                    variant: variant.toast,
                    solid: true
                })
            },
            previewImage: function (event) {
                // Reference to the DOM input element
                var input = event.target;
                // Ensure that you have a file before attempting to read it
                if (input.files && input.files[0]) {
                    // create a new FileReader to read this image and convert to base64 format
                    var reader = new FileReader();
                    // Define a callback function to run, when FileReader finishes its job
                    reader.onload = (e) => {
                        // Note: arrow function used here, so that "this.imageData" refers to the imageData of Vue component
                        // Read image as base64 and set to imageData
                        this.imageData = e.target.result;
                    }
                    // Start the reader job - read file as a data url (base64 format)
                    reader.readAsDataURL(input.files[0]);
                }
            },
        }
    })
</script>




