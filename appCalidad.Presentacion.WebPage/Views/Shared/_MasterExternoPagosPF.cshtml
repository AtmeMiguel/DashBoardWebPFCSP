<script>
    // Seleccionamos el botón de menú y el contenedor del nav
    const menuToggle = document.querySelector('.menu-toggle');
    const nav = document.querySelector('header nav');

    // Añadimos un listener para el evento de clic en el botón hamburguesa
    menuToggle.addEventListener('click', () => {
        // Alternamos la clase 'active' en el contenedor del nav
        nav.classList.toggle('active');
    });

</script>